<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed %>
  <p>Completed.</p>
<% else %>
  <p>This task is not completed.</p>
<% end %>

<%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-primary" %>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Delete",
  tasks_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
